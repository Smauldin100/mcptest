# Database Configuration
# Uncomment and fill in the appropriate section for your database type

# Database Type (mysql, postgresql, sqlite)
DB_TYPE=sqlite

# For SQLite
DB_PATH=database.db

# For MySQL/PostgreSQL
# DB_HOST=localhost
# DB_PORT=3306  # MySQL default: 3306, PostgreSQL default: 5432
# DB_NAME=your_database_name
# DB_USER=your_username
# DB_PASSWORD=your_password

# Chatbot Configuration
USE_TRANSFORMER=true  # Set to false for simpler NLP processing

# Application Configuration
PORT=5000
DEBUG=true  # Set to false in production